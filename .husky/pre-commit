#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Prevent run when merge code
git rev-parse -q --verify MERGE_HEAD && exit 0

echo 'ðŸ‘· Styling, testing your project before committing'

# Check Prettier standards
npm run prettier ||
(
    echo 'ðŸ¤¡ Run npm run prettier:fix to format your code then add changes and try commit again.';
    false;
)

# Check ESLint Standards
npm run lint ||
(
    echo 'ðŸ¤¡ ESLint Check Failed. Make the changes required above.'
    false;
)

# Check tsconfig standards
npm run check-types ||
(
    echo 'ðŸ¤¡ Failed Type check. Make the changes required above.'
    false;
)

# If everything passes... Now we can commit
echo 'âœ… Code looking good... I am committing this now.'
